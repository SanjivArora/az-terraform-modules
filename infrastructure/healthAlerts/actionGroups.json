                    {
                        "name": "emailAction_-EmailARMRole-",
                        "roleId": "8e3af657-a8ff-443c-a75c-2fe8c4bcb635",
                        "useCommonAlertSchema": false
                    }
                ]
            },
            "identity": null
        },
        {
            "type": "Microsoft.Insights/ActionGroups",
            "apiVersion": "2017-04-01",
            "name": "Planned Maintenance Action",
