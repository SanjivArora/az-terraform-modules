{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "actionGroups_name": {
            "defaultValue": "ProdHealthActionGroup",
            "type": "string"
        },
        "activityLogAlerts_name": {
            "defaultValue": "ServiceHealthAlert",
            "type": "string"
        },
        "emailAddress": {
            "type": "string"
        },
        "actionGroups_ShortName": {
            "type": "string"
        }
    },
    "variables": {
        "alertScope": "[concat('/','subscriptions','/',subscription().subscriptionId)]"
    },
    "resources": [
        {
            "comments": "Action Group for Service Health Alert",
            "type": "microsoft.insights/actionGroups",
            "name": "[parameters('actionGroups_name')]",
            "apiVersion": "2017-04-01",
            "location": "Global",
            "tags": {},
            "scale": null,
            "properties": {
                "groupShortName": "[parameters('actionGroups_ShortName')]",
                "enabled": true,
                "emailReceivers": [
                    {
                        "name": "[parameters('actionGroups_name')]",
                        "emailAddress": "[parameters('emailAddress')]"
                    }
                ],
                "webhookReceivers": [
                    {
                        "name": "pagerDutyCall",
                        "serviceUri": "https://events.pagerduty.com/integration/b93dcb34b6e34904b520e9a24ebfb4a9/enqueue",
                        "useCommonAlertSchema": false
                    }
                ]
            },
            "dependsOn": []
        },
        {
            "comments": "Service Health Activity Log Alert Ref: https://github.com/MicrosoftDocs/azure-docs/blob/master/articles/service-health/resource-health-alert-arm-template-guide.md",
            "type": "microsoft.insights/activityLogAlerts",
            "name": "[parameters('activityLogAlerts_name')]",
            "apiVersion": "2017-04-01",
            "location": "Global",
            "tags": {
                "Application": "ServiceAlerts"
            },
            "scale": null,
            "properties": {
                "scopes": [
                    "[variables('alertScope')]"
                ],
                "enabled": true,
                "description": "ARM based Service Issue Alert",
                "condition": {
                    "allOf": [
                        {
                            "field": "category",
                            "equals": "ServiceHealth",
                            "containsAny": null
                        },
                        {
                            "anyOf": [
                                {
                                    "field": "properties.cause",
                                    "equals": "PlatformInitiated",
                                    "containsAny": null
                                }
                            ]
                        },
                        {
                            "anyOf": [
                                {
                                    "field": "status",
                                    "equals": "Active",
                                    "containsAny": null
                                },
                                {
                                    "field": "status",
                                    "equals": "Resolved",
                                    "containsAny": null
                                },
                                {
                                    "field": "status",
                                    "equals": "InProgress",
                                    "containsAny": null
                                },
                                {
                                    "field": "status",
                                    "equals": "Updated",
                                    "containsAny": null
                                }
                            ]
                        }
                    ]
                },
                "actions": {
                    "actionGroups": [
                        {
                            "actionGroupId": "[resourceId('microsoft.insights/actionGroups', parameters('actionGroups_name'))]",
                            "webhookProperties": {}
                        }
                    ]
                }
            },
            "dependsOn": [
                "[resourceId('microsoft.insights/actionGroups', parameters('actionGroups_name'))]"
            ]
        }
    ]
}